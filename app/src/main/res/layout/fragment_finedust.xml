<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingVertical="20dp">

            <TextView
                android:id="@+id/location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="40dp"
                android:text="성북구"
                android:textColor="#437FB3"
                android:textSize="40sp" />

            <LinearLayout
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="미세먼지"
                    android:textColor="#437FB3"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="초미세먼지"
                    android:textColor="#437FB3"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/now10Image"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_weight="0"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="20dp"
                    app:srcCompat="@drawable/emoticon_eight_level_big_2"
                    tools:srcCompat="@drawable/emoticon_eight_level_big_2" />

                <ImageView
                    android:id="@+id/now25Image"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_weight="0"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="20dp"
                    app:srcCompat="@drawable/emoticon_eight_level_big_2" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="240dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/now10Text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="0μg/m³"
                        android:textColor="#437FB3"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/now25Text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="0μg/m³"
                        android:textColor="#437FB3"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/pm10Status"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="좋음"
                        android:textColor="#437FB3"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/pm25Status"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="좋음"
                        android:textColor="#437FB3"
                        android:textSize="20sp" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="   미세먼지"
                android:textColor="#437FB3"
                android:textSize="16sp" />

            <SeekBar
                android:id="@+id/pm10Bar"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:clickable="false"
                android:enabled="false"
                android:longClickable="false"
                android:max="100"
                android:paddingVertical="14dp"
                android:progressDrawable="@drawable/pm10bar" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:text="   초미세먼지"
                android:textColor="#437FB3"
                android:textSize="16sp" />

            <SeekBar
                android:id="@+id/pm25Bar"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:clickable="false"
                android:enabled="false"
                android:longClickable="false"
                android:paddingVertical="14dp"
                android:progressDrawable="@drawable/pm25bar" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:orientation="horizontal"
            android:paddingHorizontal="60dp"
            android:paddingVertical="50dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/good"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/emoticon_eight_level_big_2" />

                <TextView
                    android:id="@+id/goodText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:gravity="center_horizontal"
                    android:text="좋음"
                    android:textColor="#437FB3" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/normal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/emoticon_eight_level_big_4" />

                <TextView
                    android:id="@+id/normalText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:gravity="center_horizontal"
                    android:text="보통"
                    android:textColor="#437FB3" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/bad"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/emoticon_eight_level_big_5" />

                <TextView
                    android:id="@+id/badText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:gravity="center_horizontal"
                    android:text="나쁨"
                    android:textColor="#437FB3" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/worst"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/emoticon_eight_level_big_7" />

                <TextView
                    android:id="@+id/worstText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:gravity="center_horizontal"
                    android:text="매우나쁨"
                    android:textColor="#437FB3" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>